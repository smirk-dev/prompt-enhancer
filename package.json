{
  "name": "magic-sparkle-prompt-engine",
  "displayName": "Magic Sparkle Prompt Engine",
  "version": "1.0.0",
  "description": "Cross-browser extension that enriches LLM prompts using local context-scraping",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv3",
    "package:all": "plasmo build && plasmo package && plasmo build --target=firefox-mv3 && plasmo package --target=firefox-mv3",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "manifest": {
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://gemini.google.com/*"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smirk-dev/prompt-enhancer.git"
  },
  "keywords": [],
  "author": "smirk-dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/smirk-dev/prompt-enhancer/issues"
  },
  "homepage": "https://github.com/smirk-dev/prompt-enhancer#readme",
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "^0.90.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "^0.1.36",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.24",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
